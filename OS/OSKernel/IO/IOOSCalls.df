fn OSDirectoryRead { count dirent filehandle -- readcount ok }
	fnsection "PAGE$text"

	// allocate an MDL to pin the user buffer with

	auto mdl
	count@ OSDirectoryEntry_SIZEOF * // length
	dirent@ // vaddr
	0 // kflags
	MmMDLAllocateWithQuota ok! mdl!

	if (ok@)
		return
	end

	1 // lockforwrite
	mdl@ // mdl
	MmMDLPin ok!

	if (ok@)
		mdl@ MmMDLFree

		return
	end

	mdl@ MmMDLMap ok!

	if (ok@)
		mdl@ MmMDLUnpin

		mdl@ MmMDLFree

		return
	end

	count@ // count
	mdl@ MmMDLHeader_MappedAddress + @ // dirent
	filehandle@ // filehandle
	IODirectoryRead ok! readcount!

	mdl@ MmMDLUnmap
	mdl@ MmMDLUnpin
	mdl@ MmMDLFree
end

