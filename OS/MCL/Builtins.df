	if (ok@)
		return
	end

	pointerof MclpBuiltinEqualNum // func
	"==" // name
	machine@ // machine
	MclpRegisterBuiltin ok!

	if (ok@)
		return
	end

	pointerof MclpBuiltinEqualString // func
	"=" // name
	machine@ // machine
	MclpRegisterBuiltin ok!

	if (ok@)
		return
	end

	pointerof MclpBuiltinNotEqualNum // func
	"n==" // name
