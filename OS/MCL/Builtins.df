fn MclpRegisterPrimitiveBuiltins { machine -- ok }
	pointerof MclpBuiltinPrint // func
	"print" // name
	machine@ // machine
	MclpRegisterBuiltin ok!

	if (ok@)
		return
	end

	pointerof MclpBuiltinPlus // func
	"+" // name
	machine@ // machine
	MclpRegisterBuiltin ok!

	if (ok@)
		return
	end

	pointerof MclpBuiltinMinus // func
	"-" // name
	machine@ // machine
