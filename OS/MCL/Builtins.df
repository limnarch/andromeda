	if (ok@)
		return
	end

	pointerof MclpBuiltinLessThan // func
	"lt" // name
	machine@ // machine
	MclpRegisterBuiltin ok!

	if (ok@)
		return
	end

	pointerof MclpBuiltinGreaterThan // func
	"gt" // name
	machine@ // machine
	MclpRegisterBuiltin ok!

	if (ok@)
		return
	end

	pointerof MclpBuiltinLessThanEqual // func
	"lte" // name
