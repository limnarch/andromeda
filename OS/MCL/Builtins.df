fn (MclBuiltinF) MclpBuiltinNot { argvt argcn machine -- value ok }
	if (argcn@ 1 ~=)
		"expected 1 argument\n" // fmt
		machine@ // machine
		MclDiagnostic

		STATUS_SYNTAX_ERROR ok!

		return
	end

	4 OSHeapAllocate ok! value!

	if (ok@)
		return
	end

	if (argvt@@ MclpEvaluateValueTruthiness ~~)
		'1' value@ sb
	end else
		'0' value@ sb
	end

	0 value@ 1 + sb
end